@model Dreadmare.DTOModels.ReviewsViewModel

@{
    ViewBag.Title = "GetReviews";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<div id="PageTitle" style="position: absolute; left: 250px; top:0px; padding-top: 150px; ">
    <img src="~/Images/MovieReviews.png" />
</div>
<table cellpadding='0' cellspacing='0' style ="padding-top: 100px; padding-left: 200px;">
    <tr><td class="HeaderRow TitleColumn">Movie Title</td><td class="HeaderRow ScoreColumn">Rating</td></tr>
    @if (Model != null)
    {
        foreach (var movie in Model.Reviews)
        {
            <tr><td>@movie.MovieTitle</td><td class ="ScoreColumns">@movie.OverAllPoints</td></tr>
        }
    }
</table>


