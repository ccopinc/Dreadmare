@model Dreadmare.DTOModels.ReviewDetails

<div style="height: 600px; background-color: black;">
    <div class="Review-Movie-TItle">@Model.MovieTitle</div>
    <div class="Review-Review-TItle">@Model.ReviewTitle</div>
    <div class="Review-Review">@Model.Review</div>
    <div class="Review-Reviewer">Reviewed By:&nbsp;&nbsp;@Model.Reviewer</div>
    <div class="spacer-25"></div>
    <table style="width: 900px;">
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">PLOT:</td>
            <td>@Model.Movie.Plot</td>
            <td rowspan="9"><img src="@Model.Movie.Poster"/></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">STARRING:</td>
            <td>@Model.Movie.Actors</td>
            <td></td>

        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">DIRECTED BY:</td>
            <td>@Model.Movie.Director</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">WRITTEN BY:</td>
            <td>@Model.Movie.Writer</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">PRODUCED BY:</td>
            <td>@Model.Movie.Production</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">RELEASED:</td>
            <td>@Model.Movie.Released</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">DVD RELEASE:</td>
            <td>@Model.Movie.DVD</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">RATED:</td>
            <td>@Model.Movie.Rated</td>
            <td></td>
        </tr>
        <tr class="movie-plot">
            <td class="details-header" style="width: 150px;">RUNTIME:</td>
            <td>@Model.Movie.Runtime</td>
            <td></td>
        </tr>
    </table>

</div>